<html lang="en"> <!--<![endif]-->
<head>

    <!-- Basic Page Needs
    ================================================== -->
    <meta charset="utf-8">
    <title>Seller BnB</title>

    <!-- Mobile Specific Metas
    ================================================== -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- CSS
    ================================================== -->
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.0/themes/smoothness/jquery-ui.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/colors/blue.css" id="colors">
    <link rel="stylesheet" href="css/croppie.css" />

    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

</head>

<body class="boxed">
<div id="wrapper">

    <% include header.ejs %>

    <!-- Titlebar
    ================================================== -->
    <section class="parallax-titlebar fullwidth-element"  data-background="#000" data-opacity="0.2" data-height="160">

        <img src="images/mini-slides/5.jpg" alt="" />
        <div class="parallax-overlay"></div>

        <div class="parallax-content">
            <h2>Add Your Item <span>Your commodity : <%= commodityName %></span></h2>

            <nav id="breadcrumbs">
                <ul>
                    <li>Home</li>
                    <li>Sell</li>
                    <li>Search Commodity</li>
                    <li>Commodity Details</li>
                    <li>Add Items</li>
                </ul>
            </nav>
        </div>
    </section>

    <div class="container">

        <!-- Content
        ================================================== -->

        <div class="twelve columns products centered">
            <a style="display: none" href="#small-dialog" class="popup-with-zoom-anim button color" id="cropWindow"></a>
            <div id="small-dialog" class="small-dialog zoom-anim-dialog mfp-hide upload-demo">
                <h3 class="headline">Crop Image</h3><span class="line margin-bottom-25"></span>
                <div class="clearfix"></div>
                <div align="center">
                    <div id="upload-demo" class="croppie-container" style="width: 500px; height: 500px">
                    </div>
                    <br><br>
                    <a class="button color" id="crop-btn">Crop Image</a>
                </div>

            </div>

            <section class="variables">

                <form method="post" name="bidform">

                    <fieldset>
                        <input type="hidden" id="userId" name="userId" value="<%= user.id %>"/>
                        <input type="hidden" id="commodityId" name="commodityId" value="<%= CommodityId %>"/>
                        <input type="hidden" id="commodityName" name="commodityName" value="<%= commodityName %>"/>

                        <div class="twelve alpha columns editform">
                            <label>Title : </label>
                            <input name="title" type="text" id="title" placeholder="Write a descriptive title. [Use words people would search for when looking for your commodity]"/>
                        </div>


                        <div class="thirteen alpha columns editform">
                            <label>Quantity : </label>
                            <div class="ten columns" style="margin-left:0px">
                                <input name="quantity" type="text" id="quantity" placeholder="Quantity you want to put"/>
                            </div>
                            <div class="two columns">
                                <select name="measureUnit" id="measureUnit">
                                    <% for(var measureIndex = 0; measureIndex < measureUnits.length; measureIndex++) { %>
                                    <option value="<%= measureUnits[measureIndex].unitName %>"><%= measureUnits[measureIndex].unitName %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>

                        <div class="twelve alpha columns editform">
                            <label for="delivery_by">Delivery By : </label>
                            <select id="delivery_by" name="delivery_by">
                                <option>Buyer</option>
                                <option>Seller</option>
                            </select>
                        </div>
                        <div class="thirteen alpha columns editform">
                            <div class="nine columns bidform" style="margin-left: 0px;">
                                <label for="warehouse">Warehouse : </label>
                                <select id="warehouse" name="warehouse">
                                    <% for(var warehouseIndex = 0; warehouseIndex < WareHouses.length; warehouseIndex++) {
                                        var address1 = WareHouses[warehouseIndex].warehouseAddress1;
                                        var address2 = WareHouses[warehouseIndex].warehouseAddress2;
                                        var city = WareHouses[warehouseIndex].warehouseCity;
                                        var address = '';
                                        if(address1 != null){
                                            address += address1;
                                        }
                                        if(address2 != null){
                                            address += ', '+address2;
                                        }
                                        if(city != null){
                                            address += ', '+city;
                                        }
                                    %>
                                    <option value="<%= WareHouses[warehouseIndex].id %>"><%= address %></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="three columns bidform">
                                <input type="submit" value="Add Warehouse" id="add_warehouse" style="margin-top: 30px;"/>
                            </div>

                        </div>

                        <div class="thirteen alpha columns editform">
                            <div class="twelve columns bidform" style="margin-left: 0px;">
                                <label for="packing_type">Packing Type : </label>
                                <select id="packing_type" name="packing_type">
                                    <% for(var packingIndex = 0; packingIndex < packingTypes.length; packingIndex++) { %>
                                        <option value="<%= packingTypes[packingIndex].type %>"><%= packingTypes[packingIndex].type %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>

                        <div class="twelve alpha columns editform">
                            <label for="payment_terms">Payment Terms : </label>
                            <select id="payment_terms" name="payment_terms">
                                <option>1 month credit</option>
                                <option>1 week credit</option>
                                <option>Cash On Delivery</option>
                            </select>
                        </div>

                        <div class="thirteen alpha columns editform">
                            <label>Suggested Price : </label>
                            <div class="ten columns" style="margin-left:0px">
                                <input name="suggested_price" type="text" id="suggested_price" placeholder="Suggest a price for the item"/>
                            </div>
                            <div class="two columns">
                                <select name="priceUnit" id="priceUnit">
                                    <% for(var priceIndex = 0; priceIndex < priceUnits.length; priceIndex++) { %>
                                    <option value="<%= priceUnits[priceIndex].unitName %>"><%= priceUnits[priceIndex].unitName %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>

                        <div class="twelve alpha columns bidform">
                            <label for="payment_terms">Duration : </label>
                            <div class="two columns bidform" style="margin-left: 0px;">
                                <input name="days" type="number" id="days" placeholder="Days" value="0"/>
                            </div>
                            <div class="two columns bidform">
                                <input name="hours" type="number" id="hours" placeholder="Hours" value="0"/>
                            </div>
                            <div class="two columns bidform">
                                <input name="mins" type="number" id="mins" placeholder="Mins" value="0"/>
                            </div>
                        </div>

                        <div class="twelve alpha columns editform">
                            <label>Seller Note: <span>*</span></label>
                            <textarea name="seller_note" cols="91" rows="3" id="seller_note" spellcheck="true" style="width: 97%" placeholder="Describe Your Item"></textarea>
                        </div>

                        <div class="twelve alpha columns editform">
                            <label>Images : </label>
                            <div class="ten columns" id="imagepreview-div">
                            </div>
                            <button class="commodity-uploadimage" id="commodity-uploadimage">Upload Images</button>
                            <input type="file" name="fileToUpload" id="fileToUpload" style="display: none">
                        </div>
                        <div class="twelve columns bidform" style="margin-top: 10px">
                            <input type="submit" class="submit" id="preview" value="Preview"/>
                            <input type="submit" class="submit" id="submit" value="Add" style="margin-top:5px"/>
                        </div>

                    </fieldset>
                    <br>
                    <div class="notification success closeable" style="display: none" id="message_success">
                        <p><span>Success! </span>Item was successfully added for bidding!</p>
                        <a class="close" href="#"></a>
                    </div>
                    <div class="clearfix"></div>
                </form>

            </section>
        </div>

    </div>

    <div class="margin-top-50"></div>

    <!-- Footer
    ================================================== -->
    <% include footer.ejs %>

</div>


