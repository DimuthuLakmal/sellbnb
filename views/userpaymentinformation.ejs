<head>

    <!-- Basic Page Needs
    ================================================== -->
    <meta charset="utf-8">
    <title>Seller BnB</title>

    <!-- Mobile Specific Metas
    ================================================== -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- CSS
    ================================================== -->
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.0/themes/smoothness/jquery-ui.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/colors/blue.css" id="colors">

    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

</head>

<body class="boxed">
<div id="wrapper">

    <% include header.ejs %>

    <!-- Titlebar
    ================================================== -->
    <section class="parallax-titlebar fullwidth-element"  data-background="#000" data-opacity="0.45" data-height="160">

        <img src="images/titlebar_bg_02.jpg" alt="" />
        <div class="parallax-overlay"></div>

        <div class="parallax-content">
            <h2>User Account <span>Payment Information</span></h2>

            <nav id="breadcrumbs">
                <ul>
                    <li>Home</li>
                    <li>Account</li>
                    <li>Payment Information</li>
                </ul>
            </nav>
        </div>
    </section>

    <div class="container">

        <!-- Sidebar
        ================================================== -->
        <div class="four columns">

            <!-- Categories -->
            <div class="widget margin-top-0">

                <ul id="categories">

                    <li><a href="/user/basic">Basic Account</a></li>
                    <li><a href="/user/contact">Contact Information</a></li>
                    <li><a href="/user/payment" class="active">Payment Information</a></li>
                    <li><a href="/user/business">Business Information</a></li>
                    <li><a href="/user/notification">Notification Preferences</a></li>
                    <li><a href="/items/search">Sell</a></li>

                </ul>
                <div class="clearfix"></div>

            </div>

        </div>


        <!-- Content
        ================================================== -->

        <div class="twelve columns products">
            <% var paymentInfomations = userPaymentInformation.PaymentInformations %>

            <% for(var paymentIndex = 0; paymentIndex < paymentInfomations.length; paymentIndex++) {
                var paymentInfo = paymentInfomations[paymentIndex];
            %>
                <h3 class="headline">Account <%= paymentIndex + 1 %></h3><span class="line margin-bottom-30"></span><div class="clearfix"></div>
                <table class="basic-table" style="">

                    <tbody>
                    <tr>
                        <td>Bank Account No</td>
                        <td><%= paymentInfo.bankAccountNo %></td>
                    </tr>
                    <tr>
                        <td>Account Type </td>
                        <td><%= paymentInfo.accountType %></td>
                    </tr>
                    <tr>
                        <td>Account Holder Name </td>
                        <td><%= paymentInfo.accountName %></td>
                    </tr>
                    <tr>
                        <td>Bank Name</td>
                        <td><%= paymentInfo.bankName %></td>
                    </tr>
                    <tr>
                        <td>Bank Branch</td>
                        <td><%= paymentInfo.bankCBranch %></td>
                    </tr>
                    <tr>
                        <td>Country</td>
                        <td><%= paymentInfo.bankCountry %></td>
                    </tr>
                    </tbody>
                </table>
                <a style="color:#2db2ea;float: right" class="paymentinformationremove">Remove</a><br><br>
                <form action="/api/user/paymentinfo/delete" method="post">
                    <input type="hidden" value="<%= paymentInfo.id %>" name="paymentId"/>
                </form>
            <% } %>
            <br>
            <a class="popup-with-zoom-anim" href="#payment-add-dialog" style="color:#2db2ea;float: right">Add Account</a>
            <div id="payment-add-dialog" class="small-dialog zoom-anim-dialog mfp-hide">
                <h2 class="margin-bottom-10">Add Payment Information</h2>
                <form method="post" name="editform" action="/api/user/paymentinfo/add">

                    <fieldset>

                        <input name="id" type="hidden" value="<%= user.id %>"/>

                        <div class="twelve alpha columns editform">
                            <input name="newbankaccountno" type="text" id="newbankaccountno" placeholder="Bank Account Number"/>
                        </div>

                        <div class="twelve alpha columns editform">
                            <input name="newbankaccounttype" type="text" id="newbankaccounttype" placeholder="Bank Account Number"/>
                        </div>

                        <div class="twelve alpha columns editform">
                            <input name="newbankaccountname" type="text" id="newbankaccountname" placeholder="Bank Account Holder Name"/>
                        </div>

                        <div class="twelve alpha columns editform">
                            <input name="newbankname" type="text" id="newbankname" placeholder="Bank Name"/>
                        </div>

                        <div class="twelve alpha columns editform">
                            <input name="newbankbranch" type="text" id="newbankbranch" placeholder="Bank Branch"/>
                        </div>

                        <div class="twelve alpha columns editform">
                            <input name="newbankcountry" type="text" id="newbankcountry" placeholder="Bank Country"/>
                        </div>

                        <div class="twelve columns editform">
                            <input type="submit" class="submit" id="submitnewaccoutn" value="Save"/>
                        </div>

                    </fieldset>

                    <div class="clearfix"></div>
                </form>
            </div>
        </div>

    </div>

    <div class="margin-top-50"></div>

    <!-- Footer
    ================================================== -->
    <div id="footer">

        <!-- Container -->
        <div class="container">

            <div class="four columns">
                <img src="images/logo-footer.png" alt="" class="margin-top-10"/>
                <p class="margin-top-15">Nulla facilisis feugiat magna, ut molestie metus hendrerit vitae. Vivamus
                    tristique lectus at varius rutrum. Integer lobortis mauris non consectetur eleifend.</p>
            </div>

            <div class="four columns">

                <!-- Headline -->
                <h3 class="headline footer">Customer Service</h3>
                <span class="line"></span>
                <div class="clearfix"></div>

                <ul class="footer-links">
                    <li><a href="#">Order Status</a></li>
                    <li><a href="#">Payment Methods</a></li>
                    <li><a href="#">Delivery & Returns</a></li>
                    <li><a href="#">Privacy Policy</a></li>
                    <li><a href="#">Terms & Conditions</a></li>
                </ul>

            </div>

            <div class="four columns">

                <!-- Headline -->
                <h3 class="headline footer">My Account</h3>
                <span class="line"></span>
                <div class="clearfix"></div>

                <ul class="footer-links">
                    <li><a href="#">My Account</a></li>
                    <li><a href="#">Order History</a></li>
                    <li><a href="#">Wish List</a></li>
                </ul>

            </div>

            <div class="four columns">

                <!-- Headline -->
                <h3 class="headline footer">Newsletter</h3>
                <span class="line"></span>
                <div class="clearfix"></div>
                <p>Sign up to receive email updates on new product announcements, gift ideas, special promotions, sales
                    and more.</p>

                <form action="#" method="get">
                    <button class="newsletter-btn" type="submit">Join</button>
                    <input class="newsletter" type="text" placeholder="mail@example.com" value=""/>
                </form>
            </div>

        </div>
        <!-- Container / End -->

    </div>
    <!-- Footer / End -->

    <!-- Footer Bottom / Start -->
    <div id="footer-bottom">

        <!-- Container -->
        <div class="container">

            <div class="eight columns">Â© Copyright 2014 by <a href="#">trizzy</a>. All Rights Reserved.</div>
            <div class="eight columns">
                <ul class="payment-icons">
                    <li><img src="images/visa.png" alt=""/></li>
                    <li><img src="images/mastercard.png" alt=""/></li>
                    <li><img src="images/skrill.png" alt=""/></li>
                    <li><img src="images/moneybookers.png" alt=""/></li>
                    <li><img src="images/paypal.png" alt=""/></li>
                </ul>
            </div>

        </div>
        <!-- Container / End -->

    </div>
    <!-- Footer Bottom / End -->

    <!-- Back To Top Button -->
    <div id="backtotop"><a href="#"></a></div>

</div>


