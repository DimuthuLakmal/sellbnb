<body class="boxed">
<div id="wrapper">


    <% include header.ejs %>

<div class="row"></div>

    <!-- Content
    ================================================== -->

    <!-- Container -->
    <div class="container">

        <div class="fifteen columns centered">

            <div class="info-banner" align="center">
                <div class="info-content">
                    <h2>Contract Details - <strong><%= sellContractItem.User.full_name %>,
                            <%= sellContractItem.User.company_name%></strong></h2>
                </div>
            </div>

            <div class="contract-details">
                <table class="basic-table" style="">

                    <tbody>


                    </tbody>
                </table>

                <div class="clearfix"></div>

                <table class="basic-table" style="">

                    <tbody>
                    <tr>
                        <td> Contract ID</td>
                        <td> CI<%= sellContractBid.id %></td>
                    </tr>
                    <tr>
                        <td> Contract Date</td>
                        <td> <%= contractDate %></td>
                    </tr>
                    <tr>
                        <td> Status</td>
                        <% if(sellContractBid.status == 'open') {%>
                        <td> Contract Created </td>
                        <% } else if(sellContractBid.status == 'mutual-cancellation-buyer') {%>
                        <td> Pending Mutual Cancellation by Seller </td>
                        <% } else if(sellContractBid.status == 'mutual-cancellation-seller') {%>
                        <td> Pending Mutual Cancellation by Buyer </td>
                        <% } else if(sellContractBid.status == 'mutual-cancellation-all') { %>
                        <td> Mutual Cancellation accepted by both parties </td>
                        <% } %>
                    </tr>
                    <tr>
                        <td> Commodity Name</td>
                        <td> <%= sellContractItem.Commodity.name %></td>
                    </tr>
                    <tr>
                        <td> Packing Type</td>
                        <%if(sellContractBid.packageType !== null && sellContractBid.packageType != "") {%>
                        <td> <%= sellContractBid.packageType %></td>
                        <% } else {%>
                        <td> <%= sellContractItem.packageType %></td>
                        <% } %>
                    </tr>
                    <tr>
                        <td> Agreed Quantity</td>
                        <%if(sellContractBid.quantity !== null && sellContractBid.quantity != "") {%>
                            <td> <%= sellContractBid.quantity %></td>
                        <% } else {%>
                            <td> <%= sellContractItem.quantity %></td>
                        <% } %>
                    </tr>
                    <tr>
                        <td>Delivery By</td>
                        <td> <%= sellContractBid.deliveryBy %></td>
                    </tr>
                    <% if(sellContractBid.deliveryBy == 'Seller') {%>
                        <tr>
                            <td> Delivery Cost</td>
                            <td> <%= sellContractBid.deliveryCost %></td>
                        </tr>
                    <% } %>
                    <% if(sellContractBid.deliveryBy == 'Seller') {%>
                        <tr>
                            <td>Buyer Address</td>
                            <%
                                var formattedAddress = "";
                                formattedAddress = (warehouse.warehouseAddress1 != null && warehouse.warehouseAddress1 != undefined) ?
                                        warehouse.warehouseAddress1 : formattedAddress;
                                formattedAddress = (warehouse.warehouseAddress2 != null && warehouse.warehouseAddress2 != undefined) ?
                                formattedAddress + ", " +warehouse.warehouseAddress2 : formattedAddress;
                                formattedAddress = (warehouse.warehouseCity != null && warehouse.warehouseCity != undefined) ?
                                formattedAddress + ", " +warehouse.warehouseCity : formattedAddress;
                            %>
                            <td> <%= formattedAddress %></td>
                        </tr>
                    <% } %>
                    <tr>
                        <td> Payment Terms</td>
                        <%if(sellContractBid.paymentTerms !== null && sellContractBid.paymentTerms != "") {%>
                            <td> <%= sellContractBid.paymentTerms %></td>
                        <% } else {%>
                            <td> <%= sellContractItem.paymentTerms %></td>
                        <% } %>
                    </tr>
                    <tr>
                        <td> Agreed Price</td>
                        <td> <%= sellContractBid.bid %></td>
                    </tr>
                    <tr>
                        <td>Seller Note</td>
                        <td><%= sellContractItem.note %></td>
                    </tr>
                    <%if(sellContractBid.note !== null && sellContractBid.note != "") {%>
                    <tr>
                        <td>Buyer Note</td>
                        <td><%= sellContractBid.note %></td>
                    </tr>
                    <% } %>

                    </tbody>
                </table>
                <a class="popup-with-zoom-anim" href="#fullname-edit-dialog" id="action-modal"
                   style="color:#2db2ea; display: none">Action Modal</a><br/>
                <div id="fullname-edit-dialog" class="small-dialog zoom-anim-dialog mfp-hide">
                    <h2 class="margin-bottom-10" id="action-heading">Mutual Cancellation Request</h2>
                    <form method="POST" name="editform" action="/api/bid/updatesellcontract/status">
                        <p id="action-description">Are you sure to request to cancel the contract?</p>
                        <fieldset>
                            <div class="twelve columns editform">
                                <% if (sellContractBid.status == 'mutual-cancellation-buyer') { %>
                                    <input type="hidden" name="status" value="mutual-cancellation-all" />
                                <% } else { %>
                                    <input type="hidden" name="status" value="mutual-cancellation-seller" />
                                <% } %>
                                <input type="hidden" name="userId" value="<%= sellContractBid.User.id %>" />
                                <input type="hidden" name="requestFrom" value="Seller" />
                                <input type="hidden" name="itemName" value="<%= sellContractItem.title %>" />
                                <input type="hidden" name="itemId" value="<%= sellContractItem.id %>" />
                                <input type="hidden" name="bidId" value="<%= sellContractBid.id %>" />
                                <input type="submit" class="submit" value="Yes"/>
                            </div>
                        </fieldset>
                        <div class="clearfix"></div>
                    </form>
                </div>
                <% if (sellContractBid.status == 'mutual-cancellation-buyer') { %>
                    <button id="mutual_cancellation_btn" style="width: 100%" class="item-selling-btn">Accept Mutual Cancellation Request</button>
                <% } else if (sellContractBid.status == 'open') { %>
                    <button id="mutual_cancellation_btn" style="width: 100%" class="item-selling-btn">Request Mutual Cancellation</button>
                <% } %>
            </div>
        </div>
    </div>

    <div class="margin-top-50"></div>


    <!-- Footer
    ================================================== -->
    <% include footer.ejs %>

</div>


